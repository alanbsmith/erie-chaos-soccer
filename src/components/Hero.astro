---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="hero">
  <h1 class="hero__title">{title}</h1>
</section>
<style>
  .hero {
    background-color: var(--color-bg-default);
    border-bottom: 0.125rem solid var(--color-accent-strong);
    position: sticky;
    top: 0;
    z-index: 1;
    min-height: 6rem;
    padding: 1rem 0;
    display: flex;
  }

  .hero__title {
    color: #fff;
    font-size: 2.25rem;
    font-weight: bold;
    margin: 0;
    align-self: end;
	}
</style>