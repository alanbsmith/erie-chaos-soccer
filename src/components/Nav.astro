<nav class="main-nav">
	<ul class="main-nav__list">
		<li><a class="main-nav__link" href="/">Home</a></li>
    <li><a class="main-nav__link" href="/matches">Matches</a></li>
    <li><a class="main-nav__link" href="/players">Players</a></li>
  </ul>
</nav>
<script>
  const navLinks = document.getElementsByClassName("main-nav__link");
  Array.from(navLinks).forEach((link) => {
    if (link instanceof HTMLAnchorElement) {
      const isActiveLink = link.pathname.replaceAll('/', '') === window.location.pathname.replaceAll('/', '');
      if (isActiveLink) {
        link.classList.add("active");
      } else {
        link.classList.remove("active");
      }
    }
  });
</script>
<style>
	.main-nav {
		position: fixed;
		bottom: 0;
		inset-inline-start: 0;
		inset-inline-end: 0;
		z-index: 1;
		padding: 1rem;
	}
	
	.main-nav__list {
		padding: 1rem;
		display: flex;
		gap: 2rem;
		list-style: none;
		flex: 1;
    justify-content: space-around;
    margin: 0 auto;
		max-width: 48rem;
    border: solid 0.125rem var(--color-accent-strong);
    border-radius: 0.5rem;
    background-color: var(--color-bg-default);
    /* min-height: 5rem; */
    align-items: center;
	}

	.main-nav__link {
		color: var(--color-accent-soft);
		border-bottom: solid 0.125rem var(--color-bg-default);
    font-size: 1.25rem;
    font-weight: 300;
    outline: solid 0.125rem var(--color-bg-default);
    padding: 0.25rem;
    text-decoration: none;
    transition: all 300ms ease;
	}

	.main-nav__link:active,
  .main-nav__link.active,
  .main-nav__link:hover {
    border-bottom: solid 0.125rem var(--color-accent-default);
    color: var(--color-accent-default);
  }

  .main-nav__link:focus {
    border-radius: 0.25rem;
    border: none;
    color: var(--color-accent-default);
    outline: solid 0.125rem var(--color-accent-default);
  }
</style>